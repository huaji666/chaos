    <build>
        <finalName>app-parent</finalName>
        <filters>
            <filter>src/main/filters/filter-${env}.properties</filter>
        </filters>
        <resources>
            <!--配置maven资料目录-->
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <!--maven 默认过滤了.xml 文件 导致mybatis 映射文件无法编译-->
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>

            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <compilerArgs>
                        <!--<arg>-server</arg>-->
                        <arg>-parameters</arg>
                    </compilerArgs>
                    <!--<compilerArguments>-->
                    <!--<compilerArgument>-server</compilerArgument>-->
                    <!--<compilerArgument>-parameters</compilerArgument>-->
                    <!--<compilerArgument>-d64</compilerArgument>-->
                    <!--<compilerArgument>-XX:ReservedCodeCacheSize=1024</compilerArgument>-->
                    <!--<compilerArgument>-Xlint:unchecke</compilerArgument>-->
                    <!--</compilerArguments>-->
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>utf-8</encoding>
                    <showDeprecation>true</showDeprecation>
                    <showWarnings>true</showWarnings>
                    <debug>true</debug>
                    <!--<meminitial>1024m</meminitial>-->
                    <!--<maxmem>1024m</maxmem>-->
                </configuration>
            </plugin>
            <!--<plugin>-->
            <!--<groupId>org.apache.maven.plugins</groupId>-->
            <!--<artifactId>maven-war-plugin</artifactId>-->
