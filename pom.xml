            <!--<attachClasses>true</attachClasses>-->
            <!--<classesClassifier>jar</classesClassifier>-->
            <!--</configuration>-->
            <!--</plugin>-->
        </plugins>
    </build>

    <!--服务器仓库-->
    <distributionManagement>
        <snapshotRepository>
            <id>snapshots</id>
            <url>http://nexus.wj-j.cn/nexus/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>releases</id>
            <url>http://nexus.wj-j.cn/nexus/content/repositories/releases</url>
        </repository>
    </distributionManagement>

    <profiles>
        <profile>
            <id>dev</id>
            <properties>
                <!--本地开发环境-->
                <env>dev</env>
            </properties>
            <repositories>
                <repository>
                    <id>dev</id>
                    <url>http://nexus.wj-j.cn/nexus/content/groups/public/</url>
                    <layout>default</layout>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <!--属性有四个值always(实时更新) daily（每天更新） interval:xxx（隔xxx分钟更新一次）  never（从不更新） 默认为daily-->
                        <updatePolicy>always</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>dev</id>
                    <url>http://nexus.wj-j.cn/nexus/content/groups/public/</url>
                    <releases>
                        <enabled>true</enabled>
                        <!--属性有四个值always(实时更新) daily（每天更新） interval:xxx（隔xxx分钟更新一次）  never（从不更新） 默认为daily-->
                        <updatePolicy>always</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>test</id>
            <properties>
                <!--测试环境-->
                <env>test</env>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <properties>
                <!--服务器线上环境-->
                <env>production</env>
            </properties>
        </profile>
    </profiles>
